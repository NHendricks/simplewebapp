<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # 1️⃣ Assets nur dann umschreiben, WENN sie NICHT bereits /assets/... sind
  RewriteCond %{REQUEST_URI} !^/assets/
  RewriteRule ^(.*/)?assets/(.+)$ /assets/$2 [L]

  # 2️⃣ Existierende Dateien oder Ordner normal ausliefern
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # 3️⃣ SPA-Fallback
  RewriteRule ^ index.html [L]
</IfModule>
